{
  "name": "loom-mvn",
  "version": "0.4.0",
  "private": true,
  "description": "LOOM Protocol v1.1 Minimum Viable Node scaffold",
  "type": "module",
  "engines": {
    "node": ">=22"
  },
  "dependencies": {
    "@noble/ciphers": "^2.1.1",
    "nodemailer": "^8.0.1",
    "pg": "^8.16.3"
  },
  "scripts": {
    "start": "node src/index.js",
    "dev": "node --watch src/index.js",
    "test": "node --test",
    "samples": "node scripts/make_sample_payloads.js",
    "build:content-filter-corpus": "node scripts/build_content_filter_corpus.js",
    "check:prod-env": "node scripts/verify_production_env.js",
    "check:secrets": "node scripts/check_secrets_hygiene.js",
    "check:pg": "node scripts/check_postgres_readiness.js",
    "check:federation": "node scripts/check_federation_controls.js",
    "check:inbound-bridge": "node scripts/check_inbound_bridge_hardening.js",
    "check:rate-limits": "node scripts/check_rate_limit_policy.js",
    "check:outbox-workers": "node scripts/check_outbox_workers.js",
    "check:observability": "node scripts/check_observability_alerting.js",
    "check:incident-response": "node scripts/check_incident_response_readiness.js",
    "check:release-gates": "node scripts/check_release_gates.js",
    "check:federation-targets": "node scripts/check_federation_interop_targets.js",
    "check:federation-interop": "node scripts/check_federation_interop_evidence.js",
    "check:tracing": "node scripts/check_request_tracing.js",
    "check:threat-model": "node scripts/check_threat_model.js",
    "check:security-program": "node scripts/check_security_testing_program.js",
    "check:capacity-chaos": "node scripts/check_capacity_chaos_readiness.js",
    "check:dr-plan": "node scripts/check_disaster_recovery_plan.js",
    "check:access-governance": "node scripts/check_access_governance.js",
    "check:compliance": "node scripts/check_compliance_controls.js",
    "test:inbound-bridge-hardening": "node --test --test-name-pattern \"^(API refuses public inbound bridge exposure without explicit confirmation|API rejects inbound bridge admin requirement without configured admin token|API applies strict inbound bridge auth defaults on public service|API refuses weak inbound bridge auth policy on public service without explicit confirmation|API requires admin token for inbound bridged email when configured|API quarantines inbound bridged email when auth policy marks message as unverified|API can reject inbound bridged email when auth failure rejection is enabled)$\" test/server.test.js",
    "probe:rate-limits": "node scripts/run_rate_limit_probe.js",
    "drill:compliance": "node scripts/run_compliance_probe.js",
    "drill:federation-trust": "node scripts/run_federation_trust_drill.js",
    "gate:compliance": "node scripts/run_compliance_gate.js",
    "gate:release": "node scripts/run_release_gate.js",
    "drill:federation-interop": "node scripts/run_federation_interop_drill.js",
    "drill:federation-interop-matrix": "node scripts/run_federation_interop_matrix.js",
    "drill:persistence": "node scripts/run_persistence_drill.js"
  },
  "license": "Apache-2.0"
}
